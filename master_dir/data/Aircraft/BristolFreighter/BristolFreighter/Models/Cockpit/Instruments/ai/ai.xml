<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList> 

  <path>ai.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>face</object-name>
    <object-name>aircraft</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>
  
    <animation>
      <name>aiScale</name>
      <type>scale</type>
      <object-name>fond</object-name>
      <object-name>visses</object-name>
      <object-name>sphere</object-name>
      <object-name>aircraft</object-name>
      <object-name>vitre</object-name>
      <x-offset>0.8</x-offset>
      <y-offset>0.8</y-offset>
      <z-offset>0.8</z-offset>
    </animation> 

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Gloster-Gladiator/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation> 
    <type>material</type>
    <object-name>face</object-name>
    <object-name>aircraft</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>face</object-name>
    <property>orientation/roll-deg</property>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
